@model ProjetCRA.Models.MISSION


@{
    ViewBag.Title = "AjouterMission";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Missions en cours</h2>
<h3 class="text-center">Ajouter une mission</h3>


<br />


<div class="row align-items-center justify-content-center">
    <form class="form-horizontal" action="" method="post">

        <div class="form-group">
            <label  for="email">Code * :</label>
            <div class="col-sm-12">
                <input type="text" class="form-control" id="CODE" name="CODE" required>
            </div>
        </div>

        <div class="form-group">
            <label for="LIBELLE">Libellé * :</label>
            <div class="col-sm-12">
                <input type="text" class="form-control" id="LIBELLE" name="LIBELLE" required>
            </div>
        </div>

        <div class="form-group">
            <label  for="DATE_DEBUT">Date début * :</label>
            <div class="col-sm-12">
                <input type="date" class="form-control" id="DATE_DEBUT" name="DATE_DEBUT" required>
            </div>
        </div>

        <div class="form-group">
            <label  for="DATE_FIN">Date fin * :</label>
            <div class="col-sm-12">
                <input type="date" class="form-control" id="DATE_FIN" name="DATE_FIN" required>
            </div>
        </div>

        <div class="form-group">
            <label  for="UTILISATEUR_MATRICULE">Matricule employé * :</label>
            <div class="col-sm-12">
                <input type="text" class="form-control" id="UTILISATEUR_MATRICULE" name="UTILISATEUR_MATRICULE" required>
            </div>
        </div>

        <div class="form-group">
            <div class="row align-items-center justify-content-center">
                <!--<button type="submit" class="btn btn-default">Submit</button>-->
                <input type="submit" id="ajouterMission" name="ajouterMission" value="Ajouter" class="btn btn-primary" />
                <a href="~/Mission/AdminMissionsEnCours" class="btn btn-default">Retour</a>
            </div>
        </div>
    </form>

</div>
